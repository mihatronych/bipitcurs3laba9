@model IEnumerable<laba9.Models.Books>

@{
    ViewBag.Title = "Книги";
}

<h2>Книги</h2>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Название
        </th>
        <th>
            Автор
        </th>
        <th>
            Дата публикации
        </th>
        <th>
            Дата написания
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.b_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.b_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.b_author)
        </td>
        <td>
            @item.b_publ.ToShortDateString()
        </td>
        <td>
            @item.b_born.ToShortDateString()
        </td>
    </tr>
}

</table>
